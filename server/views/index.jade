extends layout

block content
  .navbar
    .container
      a.brand(href='/') Classify Your Thought
      a(href='https://github.com/richelite/checkoo')
        img.github(src='https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png')
  .container#search
    form.form-inline.center(action='/',method='post')
      input#classify.span6(type='text', name='classify', placeholder="What's in your mind?", value=""+value)
      button.btn.btn-success(type='submit') Classify
  .container#result
    h3 #{message}
